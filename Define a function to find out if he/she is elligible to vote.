#include <iostream>
using namespace std;

int vote(int age) {
    if(age >= 18) {
        cout <<  " you are elligible to vote" << endl;
    }
    else {
         cout <<  " you are not elligible to vote" << endl;
    }
}
    
   int main () {
       
       int age;
       
        cout <<  " enter your age =";
        cin >> age;
        
        vote(age);
        
        return 0;
   }
